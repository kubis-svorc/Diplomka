<Window x:Class="Diplomka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Diplomka"
        x:Name="MyWindow" Width="826" Height="554">

    <Window.CommandBindings>
        <CommandBinding Command="Save" Executed="OnSave"/>        
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="Save"/>        
    </Window.InputBindings>

    <Grid Margin="0,0,0,0">
        <!-- Navigation menu bar -->
        <Menu Margin="0,0,0,24">
            <MenuItem Header="_File">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open"/>
                <Separator/>
                <MenuItem Header="_Save">                    
                </MenuItem>
                <MenuItem Header="Save _As"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="OnExitClick"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Cut"/>
                <MenuItem Header="_Copy"/>
                <MenuItem Header="_Paste"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>

        <Grid Margin="0,0,0,0">

            <!-- Text boxes for Tab 1 -->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="107.457" />
                <ColumnDefinition Width="Auto" MinWidth="0" />
            </Grid.ColumnDefinitions>
            <TextBox Text="" Margin="6,28,-673,0" VerticalAlignment="Top" Height="330" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" AcceptsReturn="True" Background="Black" Foreground="LightGray"
                      x:Name="CodeTab" Grid.Row="1" 
                     PreviewKeyDown="CodeTab_PreviewKeyDown"
                     PreviewKeyUp="CodeTab_PreviewKeyUp" 
                     KeyUp="CodeTab_KeyUp"/>

            <ListView x:Name="SuggestionList" SelectionChanged="Suggestion_Selected" Margin="6,362,-673,50" 
                      Grid.ColumnSpan="2" Background="Black" SelectionMode="Single" Foreground="White" Height="72" VerticalAlignment="Top" 
                      Grid.Row="2" Width="800">
            </ListView>
            <TextBox Margin="6,439,-673,0" VerticalAlignment="Top" Height="72" Grid.ColumnSpan="2" AcceptsReturn="True" IsReadOnly="True" Name="ErrorTab" Background="Black" Foreground="White"
                     Grid.Row="3"/>
        </Grid>
    </Grid>
</Window>
